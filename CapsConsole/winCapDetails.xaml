                    <!--<TextBox Grid.Row="7" AcceptsReturn="True" MinLines="2" TextWrapping="WrapWithOverflow" Name="txtNote" />-->
                </Grid>
            </GroupBox>
            <GroupBox Grid.Column="2" Grid.Row="0" Header="{x:Static res:Resources.txt_Miscellaneous}">
